{
  "js/ts.implicitProjectConfig.checkJs": true,

  "files.saveConflictResolution": "overwriteFileOnDisk",
  "emeraldwalk.runonsave": {
    "autoClearConsole": true,
    "commands": [
      {
        "match": "\\.js$",
        "cmd": "npx eslint --fix ${file} & npx prettier --write ${file}"
      },
      {
        "match": "\\.jsx$",
        "cmd": "npx eslint --fix ${file} & npx prettier --write ${file}"
      },
      {
        "match": "\\.cjs$",
        "cmd": "npx eslint --fix ${file} & npx prettier --write ${file}"
      },
      {
        "match": "\\.json$",
        "cmd": "npx eslint --fix ${file} & npx prettier --write ${file}"
      },
      {
        "match": "\\.html$",
        "cmd": "npx eslint --fix ${file} & npx prettier --write ${file}"
      },
      {
        "match": "\\.css$",
        "cmd": "npx eslint --fix ${file} & npx prettier --write ${file}"
      }
    ]
  }
}
