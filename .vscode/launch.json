{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "VSCode Debugger",
      "program": "${workspaceFolder}/backend/server.js", //App entry point
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "type": "node"
    },
    {
      "name": "VSCode Hooked To Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/frontend/node_modules/**"
      ]
    }
  ]
}
